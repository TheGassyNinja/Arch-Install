[module/text]
type = custom/text
format = "  "

[module/xworkspaces]
type = internal/xworkspaces

label-active = %name%
label-active-background = ${colors.background-alt}
label-active-underline= ${colors.primary}
label-active-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.disabled}
label-empty-padding = 1

[module/xwindow]
type = internal/xwindow
label = %title:0:60:...%

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#F0C674}%mountpoint%%{F-} %percentage_used%%

label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.disabled}

[module/pulseaudio]
type = internal/pulseaudio

format-volume-prefix = "%{O-15}  "
format-volume = <label-volume>

label-volume = %{O-8}%percentage%%

label-muted = muted


[module/memory]
type = internal/memory
interval = 2
format-prefix = "  "
label = %percentage_used:2%%

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "%{T5}C%{T-}%{T4}P%{T-}%{T3}U%{T-}:"
label = %{T2}%percentage:2%%%{T-}%{O20}


[module/date]
type = internal/date
interval = 1

date = %H:%M
date-alt = %m-%d %H:%M:%S
label = %{T2}%date%%{T-}%{O-10}


[module/battery]
type = internal/battery
full-at = 95
label = %output%
format-charging = %{O-15}%{F#adff00}󰂄%{F-}%{O20}
format-discharging = %{O-15}%{T3}%{F#FFFF00}󰂃%{F-}%{T-}%{O20} 
format-full = %{O-20}%{F#00ff83}󰁹%{F-}%{O20}
; format-discharging = %{O-15}%{F#028900}%{B#00ff00}󰂃%{B-}%{F-}%{O20} 


[module/pacman-updates]
type = custom/script
;exec = pacman -Qu | wc -l
exec = checkupdates | wc -l
interval = 1000
label =  %output%
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-prefix = "%{A}%{A1:tdrop -am -w 60% -y 30% -x 20% -n 5 kitty sh -c "sudo pacman -Syu --noconfirm":}  %{A}"
format-prefix-foreground = ${colors.foreground}

[module/weather]
type = custom/script
exec = $HOME/.config/polybar/Scripts/get.weather.sh
interval = 1000
label =  %output%F
format-foreground = ${colors.foreground}
format-background = ${colors.background}

[module/powermenu]
type = custom/text
format = <label>
label =    
label-foreground = ${colors.foreground}
