[module/text]
type = custom/text
format = "  "

[module/xworkspaces]
type = internal/xworkspaces

label-active = %name%
label-active-background = ${colors.background-alt}
label-active-underline= ${colors.primary}
label-active-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.disabled}
label-empty-padding = 1

[module/xwindow]
type = internal/xwindow
label = %title:0:60:...%

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{F#F0C674}%mountpoint%%{F-} %percentage_used%%

label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.disabled}

[module/pulseaudio]
type = internal/pulseaudio

format-volume-prefix = "  "
format-volume = <label-volume>

label-volume = %percentage%%

label-muted = muted


[module/memory]
type = internal/memory
interval = 2
format-prefix = "  "
label = %percentage_used:2%%

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "  "
label = %percentage:2%%


[module/date]
type = internal/date
interval = 1

date = %H:%M
date-alt = %m-%d %H:%M:%S

label = %date%
; label-foreground = ${colors.primary}

[module/battery]
type = internal/battery
full-at = 98
format-charging = 󰂄
format-discharging = 󰂃 
;format-full = %{T3}Battery <label-full>
label-charging-font = 3
label-discharging-font = 3
label-full = 󰁹
;label-full-font = 3

[module/pacman-updates]
type = custom/script
;exec = pacman -Qu | wc -l
exec = checkupdates | wc -l
interval = 1000
label =  %output%
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-prefix = "%{A}%{A1:tdrop -am -w 60% -y 30% -x 20% -n 5 kitty sh -c "sudo pacman -Syu --noconfirm":}  %{A}"
format-prefix-foreground = ${colors.foreground}

[module/weather]
type = custom/script
exec = $HOME/.config/polybar/Scripts/get.weather.sh
interval = 1000
label =  %output%F
format-foreground = ${colors.foreground}
format-background = ${colors.background}

[module/powermenu]
type = custom/text
format = <label>
label =    
label-foreground = ${colors.foreground}
label-padding = 1
click-right = rofi -show powermenu -modi powermenu:$HOME/.local/bin/./rofi-power-menu:
click-middle = rofi -show powermenu -modi powermenu:$HOME/.local/bin/./rofi-power-menu:
click-left = rofi -show powermenu -modi powermenu:$HOME/.local/bin/./rofi-power-menu:

[module/eq]
type = custom/text
format = <label>
label = %{O-20}󰺢  
label-foreground = #96ead7
label-padding = 1
click-right = $HOME/.config/polybar/Scripts/eq.changer.sh
click-middle = $HOME/.config/polybar/Scripts/eq.changer.sh
click-left = $HOME/.config/polybar/Scripts/eq.changer.sh

[network-base]
type = internal/network
interval = 5
format-connected = <label-connected>
format-disconnected = <label-disconnected>
click-left = $HOME/.config/polybar/Scripts/wifi-menu.sh

[module/wlan]
inherit = network-base
interface-type = wireless
label-connected = %{F#96ead7} %{F-} 
label-connected-foreground = ${colors.background}
label-disconnected = 󰤮
label-disconnected-foreground = ${colors.foreground}

[module/upspeed]
type = internal/network
interface = eno1
accumulate-stats = true
interval = 1
label-connected = "%{F#96ead7} %upspeed%%{F-}"

[module/dnspeed]
type = internal/network
interface = eno1
accumulate-stats = true
interval = 1
label-connected = "%{F#96ead7} %downspeed%%{F-}"

[module/nfs]
type = custom/script
exec = $HOME/.config/polybar/Scripts/nfs-check.sh
interval = 1000
label = %{F#96ead7}%output%%{F-}

[module/artist]
type = custom/script
exec = $HOME/.config/polybar/Scripts/spotify-artist.sh
