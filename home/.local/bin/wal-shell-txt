#!/bin/bash

# Function to convert a hex color to an RGB value
hex_to_rgb() {
    local hex="$1"
    echo "$((16#${hex:1:2})) $((16#${hex:3:2})) $((16#${hex:5:2}))"
}

# Function to create ANSI escape codes from RGB values
rgb_to_ansi() {
    local r="$1"
    local g="$2"
    local b="$3"
    echo -e "\033[38;2;${r};${g};${b}m"
}

# Source the colors generated by wal
source "${HOME}/.cache/wal/colors.sh"

# Create ANSI escape codes for wal colors
color1_ansi=$(rgb_to_ansi $(hex_to_rgb $color1))
color2_ansi=$(rgb_to_ansi $(hex_to_rgb $color2))
color3_ansi=$(rgb_to_ansi $(hex_to_rgb $color3))
color4_ansi=$(rgb_to_ansi $(hex_to_rgb $color4))
color5_ansi=$(rgb_to_ansi $(hex_to_rgb $color5))
color6_ansi=$(rgb_to_ansi $(hex_to_rgb $color6))
color7_ansi=$(rgb_to_ansi $(hex_to_rgb $color7))
color8_ansi=$(rgb_to_ansi $(hex_to_rgb $color8))
color9_ansi=$(rgb_to_ansi $(hex_to_rgb $color9))
color10_ansi=$(rgb_to_ansi $(hex_to_rgb $color10))
color11_ansi=$(rgb_to_ansi $(hex_to_rgb $color11))
color12_ansi=$(rgb_to_ansi $(hex_to_rgb $color12))
color13_ansi=$(rgb_to_ansi $(hex_to_rgb $color13))
color14_ansi=$(rgb_to_ansi $(hex_to_rgb $color14))
color15_ansi=$(rgb_to_ansi $(hex_to_rgb $color15))

# Reset color
NC="\033[0m"
BLD="\033[1m"



# Example echo statements using the colors
clear
echo -e "\n\n"
echo -e "       ${color1_ansi}This is   ${BLD}color 1${NC}"
echo -e "       ${color2_ansi}This is   ${BLD}color 2${NC}"
echo -e "       ${color3_ansi}This is   ${BLD}color 3${NC}"
echo -e "       ${color4_ansi}This is   ${BLD}color 4${NC}"
echo -e "       ${color5_ansi}This is   ${BLD}color 5${NC}"
echo -e "       ${color6_ansi}This is   ${BLD}color 6${NC}"
echo -e "       ${color7_ansi}This is   ${BLD}color 7${NC}"
echo -e "       ${color8_ansi}This is   ${BLD}color 8${NC}"
echo -e "       ${color9_ansi}This is   ${BLD}color 9${NC}"
echo -e "       ${color10_ansi}This is   ${BLD}color 10${NC}"
echo -e "       ${color11_ansi}This is   ${BLD}color 11${NC}"
echo -e "       ${color12_ansi}This is   ${BLD}color 12${NC}"
echo -e "       ${color13_ansi}This is   ${BLD}color 13${NC}"
echo -e "       ${color14_ansi}This is   ${BLD}color 14${NC}"
echo -e "       ${color15_ansi}This is   ${BLD}color 15${NC}"

echo -e "\n\n"